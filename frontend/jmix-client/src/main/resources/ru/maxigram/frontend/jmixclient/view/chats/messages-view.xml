<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://messagesView.title">
    <layout>
        <vbox expand="messagesList">
            <hbox>
                <button id="agreeToDeAnonymizationButton" text="Согласиться на деанонимизацию"/>
                <button id="closeChatButton" text="Закрыть чат"/>
                <button id="goInNewChatButton" text="Перейти в новый чат"/>
            </hbox>
            <listBox id="messagesList" readOnly="true"/>
            <hbox expand="messageTextArea">
                <textArea id="messageTextArea"/>
                <button id="sendMessageButton" text="Отправить"/>
            </hbox>
        </vbox>
    </layout>
</view>